<%= simple_form_for(@celebration, :html => {:class => 'form-horizontal' }) do |f| %>
  <div class="well">
    <%= f.error_notification %>
      <%= f.input :description %>
      <%= f.input :day, collection: 1..31, input_html: {class: "span1"} %>
      <%= f.input :month, collection: 1..12, input_html: {class: "span1"}  %>
      <%= f.association :tags, :input_html => {:class => "span6", :rows => 4 }, hint: 'Quem deve ser presenteado nessa data?' %>
      <%= f.input :special %>
    
    <div class="controls">
      <%= f.button :submit, :class => "btn btn-primary" %>
      <%= link_to 'Cancelar', celebrations_path, :class => 'btn' %>
    </div>

  </div>
<% end %>
