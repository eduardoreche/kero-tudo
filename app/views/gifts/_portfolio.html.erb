  
<% @products.each do |product| %>

  <article class="portfolio">
    <div class="portfolio_inner">
      <figure>
        <a href="#">
          <%= image_tag product_picture_tag(product), class: "fullwidth product_pic" %>
        </a>
      </figure>
      <header class="entry-header">
        <h3 class="entry-title"><a href="album_four.html"><%= product.name %></a></h3>
      </header>
      <footer class="entry-meta">
        <span class="meta-date" style="display:none;"><%= product.updated_at.to_i %></span>
      </footer>
      <div class="entry-content">
        <p><%= product.description %></p>
      </div>
    </div>
  </article>
  
<% end %>
</section>
</div>
              
