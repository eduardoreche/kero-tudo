<% content_for(:highlights) do %>
  <% @highlights.each do |h| %>
  <li>
    <figure class="highlight">
      <%= image_tag h.cover_photo.url(:cropped) %>
      <figcaption>
        <%= h.description %>
      </figcaption>
    </figure>
  </li>
  <% end %>
  <li>
    <figure class="highlight">
      <a href="http://www.facebook.com" target="_blank">
        <%= image_tag 'img/bg_r-1.jpg' %>
      </a>
      <figcaption>
        <%= link_to "Curta nossa fan page no Facebook!", "http://www.facebook.com/pages/Kero-Tudo-Presentes/282373601872746", target:"_blank" %>
      </figcaption>
    </figure>
  </li>
<% end %>


<% content_for(:products) do %>
<% @products.in_groups_of(4) do |group| %>
  <li class="latest_item">
    
  <% group.each do |product| %>
    <article class="portfolio hentry one_fourth">    
      <div class="portfolio_inner">
        <figure>
          <% if product.pictures.size > 0 %>
          
           <a href="<%= product.pictures[0].picture.url(:medium) %>" rel="prettyPhoto" title="<%= product.description %>">
            <%= image_tag product_picture_tag(product), class: "fullwidth product_pic" %>
          </a>
          <% else %>
            <%= image_tag product_picture_tag(product), class: "fullwidth product_pic" %>
          <% end %>
        </figure>
          <header class="entry-header">
          <h3 class="entry-title"><%= product.name %></h3>
        </header>
        <footer class="entry-meta">
        </footer>
        <div class="entry-content"></div>
      </div>
    </article>
  <% end %>
  </li>
  <% end %>
<% end %>