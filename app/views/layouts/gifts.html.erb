<!DOCTYPE html>
<!--[if lt IE 7]><html dir="ltr" lang="en-US" class="ie6"><![endif]-->
<!--[if IE 7]><html dir="ltr" lang="en-US" class="ie7"><![endif]-->
<!--[if IE 8]><html dir="ltr" lang="en-US" class="ie8"><![endif]-->
<!--[if gt IE 8]><!--><html dir="ltr" lang="en-US"><!--<![endif]-->
  <head>
    <%= render :partial => 'layouts/site_head' %>
  </head>

  <body style="background-image:url(/assets/bgs/14.jpg)">
    
    <!-- __________________________________________________ Start Page -->

    <section id="page">
      <a href="#" id="slide_top"></a>

<!-- __________________________________________________ Start Header -->

      <%= render :partial => 'layouts/header' %>
<!-- __________________________________________________ Finish Header -->


<!-- __________________________________________________ Start Middle -->

      <div class="wrap_headline">
        <div class="headline">
            <h2>Presentes</h2>
        </div>
      </div>
      <div class="container">      
        <section id="middle">
          <div class="middle_inner">
            
<!-- __________________________________________________ Start Content -->
            
            <div class="pj_sort">
              <div class="divider"></div>
              <div class="p_options_loader" style="display: none;"></div>
              <div class="p_options_block" style="display: block;">
                <div class="p_filter">
                  <div class="p_filter_container">
                    <a class="p_cat_filter button" href="#">
                      <span>O que?</span>
                    </a>
                    <ul class="p_filter">
                      <% @groups.each do |g| %>
                      <li><%= link_to g.name, "#{gifts_filter_path}?group=#{g.id}" %></li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="cl"></div>
                </div>
                
                <div class="p_filter">
                  <div class="p_filter_container">
                    <a class="p_cat_filter button" href="#">
                      <span>Para quem?</span>
                    </a>
                    <ul class="p_filter">
                      <% @tags.each do |t| %>
                      <li><%= link_to t.name, "#{gifts_filter_path}?tag=#{t.id}" %></li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="cl"></div>
                </div>
                <div class="cl"></div>
              </div>
              
              <div class="divider"></div>
            </div>
            
            <%- if !@tag_filter.empty? or !@group_filter.empty? -%>
            <div class="comment-body filter_block">
              <h3>Filtrado por:</h3>
              <% if !@tag_filter.empty? %>
              <div>
                <div class="filter_title">Para quem?</div>
                <ul class="post-categories filter_list">
                  <% @tag_filter.each do |t| %>
                  <li><%= link_to "<span><i class='icon-remove'></i> #{t.name}</span>".html_safe, "/gifts/remove_filter?tag=#{t.id}", class: 'comment-reply-link' %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>

              <% if !@group_filter.empty? %>
              <div>
                <div class="filter_title">O que?</div>
                <ul class="post-categories filter_list">
                  <% @group_filter.each do |g| %>
                  <li><%= link_to "<span><i class='icon-remove'></i> #{g.name}</span>".html_safe, "/gifts/remove_filter?group=#{g.id}", class: 'comment-reply-link' %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
            </div>
            <%- end -%>
            
              
            <section id="middle_content">
              <div class="entry">
                <section class="waiting" style="display:none">Please wait!</section>
                <section id="portfolio" class="portfolio_container four_blocks">
                  <%= render :partial => 'portfolio' %>
                </section>
              </div>
            </section>
<!-- __________________________________________________ Finish Content -->
            </div>
        </section>
<!-- __________________________________________________ Finish Middle -->


<!-- __________________________________________________ Start Bottom -->

<%= render :partial => 'layouts/bottom' %>

<!-- __________________________________________________ Finish Bottom -->

      </div>
    </section>
<!-- __________________________________________________ Finish Page -->


<!-- __________________________________________________ Start Footer -->

<%= render :partial => 'layouts/site_footer' %>

<!-- __________________________________________________ Finish Footer -->

  </body>
</html>

