      <div class="container">      
        <section id="middle">
          <div class="middle_inner">
            <div class="content_wrap sidebar_left">
<!-- __________________________________________________ Start Side Bar -->            
            <section id="sidebar" class="fl">
              <div class="one_first">
                <h2 class="widgettitle">Menu</h2>
                <aside>
                  <div class="tab lpr">
                    <ul class="tabs">
                      <li>
                        <a href="#" class="current">
                          <span>O que?</span>
                        </a>
                      </li>
                      <li>
                        <a href="#" class>
                          <span>Para quem?</span>
                        </a>
                      </li>
                    </ul>
                    <div class="tab_content">
                      <div class="tabs_tab" style="display: block;">
                        <ul>
                          <% @groups.each do |group| %>
                          <li><%= group.name %></li>
                          <% end %>
                        </ul>
                      </div>
                      <div class="tabs_tab" style="display: none;">
                        <ul>
                          <% @tags.each do |tag| %>
                          <li><%= tag.name %></li>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </aside>
              </div>
            </section>
<!-- __________________________________________________ Finish Side Bar -->
              
<!-- __________________________________________________ Start Content -->
            
            <section id="content" class="fr">
              <div class="entry">
                <section class="portfolio_container three_blocks">
                  
                <% @products.each do |product| %>
                
                  <article class="portfolio">
                    <div class="portfolio_inner">
                      <figure>
                        <a href="#">
                          <%= image_tag product_picture_tag(product), class: "fullwidth product_pic" %>
                        </a>
                      </figure>
                      <header class="entry-header">
                        <h3 class="entry-title"><a href="album_four.html"><%= product.name %></a></h3>
                      </header>
                      <footer class="entry-meta">
                        <ul class="cmsms_category">
                          <% product.tags.each do |t| %>
                            <li><a href="#"><%= t.name %></a></li>
                          <% end %>
                        </ul>
                        <span class="meta-date" style="display:none;"><%= product.updated_at.to_i %></span>
                      </footer>
                      <div class="entry-content">
                        <p><%= product.description %></p>
                      </div>
                    </div>
                  </article>
                  
                <% end %>
                </section>
              </div>
              <%= paginate @products %>
            </section>
<!-- __________________________________________________ Finish Content -->
            </div>
