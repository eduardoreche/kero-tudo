<%= simple_form_for(@product, :html => {:class => 'form-horizontal' }) do |f| %>
  <div class="well">
    <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.association :group %>
    
    <div class="controls">
      <%= f.button :submit, :class => "btn btn-primary" %>
      <%= link_to 'Cancel', products_path, :class => 'btn' %>
    </div>

  </div>
<% end %>
