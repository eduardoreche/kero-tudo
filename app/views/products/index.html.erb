<h1><i class="icon-gift"></i> Produtos</h1>
<div class="row">
  <div class="pull-right">
    <a href="<%= new_product_path %>" class="btn btn-primary btn-large">
      <i class="icon-plus icon-white"></i>
      Criar Produto
    </a>
  </div>
</div>

<div class="row">
  <div class="span12">
    

    <% if @products.size > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
            <th>Nome</th>
            <th>Grupo</th>
            <th>Data da criação</th>
            <th>Ações</th>
        </tr>
      </thead>

      <tbody>
  
      <%= content_tag_for(:tr, @products) do |product| %>
          <td><%= product.id %></td>
            <td>
            <%= link_to product.name, product %>
          </td>
            <td>
              <%= product.group.name %>
          </td>
            <td><%= product.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td>
            <%= link_to '<i class="icon-edit"></i> Editar'.html_safe, edit_product_path(product), :class => 'btn btn-mini' %>
            <%= link_to '<i class="icon-trash"></i> Apagar'.html_safe, product, confirm: 'Você tem certeza?', method: :delete, :class => 'btn btn-mini btn-danger' %>
            <%= link_to '<i class="icon-picture"></i> Fotos'.html_safe, product_pictures_path(product), class: "btn btn-mini" %>
          </td>
      <% end %>
      </tbody>
    </table>
    
    <%= paginate @products %>
    <% end %>
  </div>
</div>