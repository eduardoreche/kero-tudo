<h1>Products</h1>
<div class="pull-right">
  <a href="<%= new_product_path %>" class="btn btn-primary btn-large">
    <i class="icon-plus icon-white"></i>
    Create product
  </a>
</div>

<% if @products.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Group</th>
        <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  
  <%= content_tag_for(:tr, @products) do |product| %>
      <td><%= product.id %></td>
        <td>
        <%= link_to product.name, product %>
      </td>
        <td>
        <%= product.description %>
      </td>
        <td>
          <%= product.group.name %>
      </td>
        <td><%= product.created_at.strftime("%d/%m/%Y %H:%M") %></td>
      <td>
        <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
      </td>
  <% end %>
  </tbody>
</table>
<% end %>