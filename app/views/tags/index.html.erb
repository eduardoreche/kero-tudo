<h1>Tags</h1>
<div class="pull-right">
  <a href="<%= new_tag_path %>" class="btn btn-primary btn-large">
    <i class="icon-plus icon-white"></i>
    Create tag
  </a>
</div>

<% if @tags.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
        <th>Name</th>
        <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  
  <%= content_tag_for(:tr, @tags) do |tag| %>
      <td><%= tag.id %></td>
        <td>
        <%= link_to tag.name, tag %>
      </td>
        <td><%= tag.created_at.strftime("%d/%m/%Y %H:%M") %></td>
      <td>
        <%= link_to 'Edit', edit_tag_path(tag), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
      </td>
  <% end %>
  </tbody>
</table>
<% end %>